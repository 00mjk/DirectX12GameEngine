<?xml version="1.0" encoding="utf-8"?>
<MaterialAsset xmlns="DirectX12GameEngine.Assets">
  <MaterialAsset.Attributes>
    <MaterialAttributes xmlns="DirectX12GameEngine.Rendering.Materials">

      <MaterialAttributes.Diffuse>
        <MaterialDiffuseMapFeature>
          <MaterialDiffuseMapFeature.DiffuseMap>
            <ComputeColor Color="1,1,1,1" />
          </MaterialDiffuseMapFeature.DiffuseMap>
        </MaterialDiffuseMapFeature>
      </MaterialAttributes.Diffuse>

      <MaterialAttributes.MicroSurface>
        <MaterialRoughnessMapFeature>
          <MaterialRoughnessMapFeature.RoughnessMap>
            <ComputeScalar Value="0.5" />
          </MaterialRoughnessMapFeature.RoughnessMap>
        </MaterialRoughnessMapFeature>
      </MaterialAttributes.MicroSurface>

      <MaterialAttributes.Specular>
        <MaterialMetalnessMapFeature>
          <MaterialMetalnessMapFeature.MetalnessMap>
            <ComputeScalar Value="0.5" />
          </MaterialMetalnessMapFeature.MetalnessMap>
        </MaterialMetalnessMapFeature>
      </MaterialAttributes.Specular>

    </MaterialAttributes>
  </MaterialAsset.Attributes>
</MaterialAsset>
