<UserControl
    x:Class="DirectX12GameEngine.Editor.Views.PropertyGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DirectX12GameEngine.Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Background="{ThemeResource AcrylicSolutionExplorerBackground}"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AcrylicSolutionExplorerBackground}">
        <TextBlock Text="{x:Bind ViewModel.AssetName}" />
    </Grid>
</UserControl>
