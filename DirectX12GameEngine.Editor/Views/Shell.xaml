<UserControl
    x:Class="DirectX12GameEngine.Editor.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DirectX12GameEngine.Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <local:EditorMenuBar />

            <Grid
                x:Name="titleBar"
                Grid.Column="1"
                Background="Transparent" />
        </Grid>

        <Grid Grid.Row="1">
            <controls:DockPanel x:Name="dockPanel">
                <local:ExtendedTabView>
                    <controls:TabViewItem Header="Solution Explorer" Visibility="{x:Bind ViewModel.EditorViews.IsSolutionExplorerOpen, Mode=OneWay}">
                        <local:SolutionExplorerView />
                    </controls:TabViewItem>
                </local:ExtendedTabView>
            </controls:DockPanel>
        </Grid>
    </Grid>
</UserControl>
