<UserControl
    x:Class="DirectX12GameEngine.Editor.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:DirectX12GameEngine.Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    AllowDrop="True"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ThemeShadow x:Name="SolutionExplorerShadow" />
        <ThemeShadow x:Name="AssetEditorShadow" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:Name="BackgroundPanel" Grid.RowSpan="2" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <local:EditorMenuBar />

            <Grid
                x:Name="TitleBar"
                Grid.Column="1"
                Background="Transparent" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition x:Name="SolutionExplorerColumnDefinition" Width="Auto" />
            </Grid.ColumnDefinitions>

            <local:ExtendedTabView
                x:Name="AssetEditorTabView"
                Background="Transparent"
                Shadow="{StaticResource AssetEditorShadow}" />

            <local:ExtendedTabView
                x:Name="SolutionExplorerTabView"
                Grid.Column="1"
                Background="{ThemeResource AcrylicSolutionExplorerBackground}"
                Shadow="{StaticResource SolutionExplorerShadow}">
                <!--<local:ExtendedTabView.Transitions>
                    <TransitionCollection>
                        <PaneThemeTransition Edge="Left" />
                    </TransitionCollection>
                </local:ExtendedTabView.Transitions>-->
            </local:ExtendedTabView>

            <controls:GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Left"
                Background="Transparent"
                Visibility="{x:Bind SolutionExplorerTabView.Visibility, Mode=OneWay}" />
        </Grid>
    </Grid>
</UserControl>
