<UserControl
    x:Class="DirectX12GameEngine.Editor.Views.Properties.PropertyMemberTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:local="using:DirectX12GameEngine.Editor.Views.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="32"
    d:DesignWidth="120"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            Background="{x:Bind MemberColor, Mode=OneWay}"
            BorderBrush="Gray"
            BorderThickness="2">
            <TextBlock
                Margin="8,0"
                VerticalAlignment="Center"
                Text="{x:Bind MemberName, Mode=OneWay}" />
        </Grid>

        <TextBox Grid.Column="1" Text="{x:Bind MemberValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
