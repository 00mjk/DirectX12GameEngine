<controls:TabView
    x:Class="DirectX12GameEngine.Editor.Views.ExtendedTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DirectX12GameEngine.Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <controls:TabView.Style>
        <Style TargetType="controls:TabView">
            <Setter Property="AllowDrop" Value="True" />
            <Setter Property="CanCloseTabs" Value="True" />
            <Setter Property="CanDragItems" Value="True" />
            <Setter Property="CanReorderItems" Value="True" />
            <Setter Property="IsCloseButtonOverlay" Value="True" />
        </Style>
    </controls:TabView.Style>
</controls:TabView>
