<winui:MenuBarItem
    x:Class="DirectX12GameEngine.Editor.Views.ViewMenuBarItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DirectX12GameEngine.Editor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:DirectX12GameEngine.Editor.ViewModels"
    xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    Title="View"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <ToggleMenuFlyoutItem Text="Solution Explorer" IsChecked="{x:Bind ViewModel.IsSolutionExplorerOpen, Mode=TwoWay}" />
    <ToggleMenuFlyoutItem Text="Property Grid" IsChecked="{x:Bind ViewModel.IsPropertyGridOpen, Mode=TwoWay}" />

</winui:MenuBarItem>
